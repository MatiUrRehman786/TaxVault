<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_background_light_gray"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:id="@+id/mainCL">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vaultIV2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:background="@drawable/circular_background_white"
        android:padding="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vaultIV2"
        app:layout_constraintTop_toTopOf="@id/vaultIV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:text="Documents"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreOptionsIV2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/three_dots" />

</androidx.constraintlayout.widget.ConstraintLayout>