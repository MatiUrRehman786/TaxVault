<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VaultActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <include
        android:id="@+id/includeView"
        layout="@layout/include_app_bar_with_back"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userTypeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:autoSizeMaxTextSize="@dimen/_10ssp"
        android:autoSizeMinTextSize="@dimen/_9ssp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/poppins_medium"
        android:text="Select User Type"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeView"
        app:layout_constraintWidth_percent="0.8" />

    <Spinner
        android:id="@+id/userTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle_background_light_gray"
        android:entries="@array/user_type"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_56sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userTypeLabel"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowBtn"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:src="@drawable/spinner_arrow"
        android:tint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/userTypeSpinner"
        app:layout_constraintEnd_toEndOf="@+id/userTypeSpinner"
        app:layout_constraintTop_toTopOf="@+id/userTypeSpinner" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/businessTypeIV"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/spinner_arrow"
            android:tint="@color/blue"
            app:layout_constraintBottom_toBottomOf="@+id/businessTypeSP3"
            app:layout_constraintEnd_toEndOf="@+id/userTypeSpinner"
            app:layout_constraintTop_toBottomOf="@+id/businessLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/businessLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:autoSizeMaxTextSize="@dimen/_10ssp"
        android:autoSizeMinTextSize="@dimen/_9ssp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/poppins_medium"
        android:text="Select Business"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userTypeSpinner"
        app:layout_constraintWidth_percent="0.8" />


        <Spinner
            android:id="@+id/businessTypeSP3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background_light_gray"
            android:entries="@array/business_type"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_56sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/businessLabel"
            app:layout_constraintWidth_percent="0.8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/signupBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/rectangle_background_blue"
            android:elevation="@dimen/_1sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="Set"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>