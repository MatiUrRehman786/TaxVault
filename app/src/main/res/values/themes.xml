<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxVault" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MonthPickerDialogStyle" >
        <item name="monthBgColor">@color/white</item>
        <item name="monthBgSelectedColor">@color/blue</item>
        <item name="monthFontColorSelected">@color/blue</item>
        <item name="monthFontColorNormal">@color/black</item>
        <item name="monthFontColorDisabled">@color/gray</item>

        <item name="headerBgColor">@color/blue</item>
        <item name="headerFontColorSelected">@color/white</item>
        <item name="headerFontColorNormal">@color/white</item>
        <item name="headerTitleColor">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="dialogActionButtonColor">@color/blue</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ProgressStyle" parent="@android:style/Widget.ProgressBar"></style>

    <style name="Theme.TaxVault.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TaxVault.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaxVault.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>